<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox id="low-stock-notification-hbox" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml" fx:controller="notification.controller.LowStockNotificationController" stylesheets="/notification.css">
    <children>
        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="/images/notifications/LowStockWarning.png"/>
            </image>
        </ImageView>
        <Label prefHeight="57.0" prefWidth="230.0" styleClass="warning-label" text="Low Stock:">
            <font>
                <Font size="40.0"/>
            </font>
        </Label>
        <Label prefHeight="58.0" prefWidth="651.0" styleClass="item-details" text="item name-category-brand-supplier">
            <font>
                <Font size="40.0"/>
            </font>
        </Label>
        <Button mnemonicParsing="false" prefHeight="65.0" styleClass="close-button-low-stock-notification">
            <graphic>
                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/images/notifications/CloseButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</HBox>
